<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="633.0" prefWidth="860.0" styleClass="function-screen-pane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.EditWord">
   <children>
      <TextField fx:id="wordField" focusTraversable="false" layoutX="41.0" layoutY="43.0" prefHeight="34.0" prefWidth="204.0" styleClass="edit-text-field">
         <font>
            <Font size="15.0" />
         </font>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding></TextField>
      <TextField fx:id="pronounceField" focusTraversable="false" layoutX="322.0" layoutY="43.0" prefHeight="34.0" prefWidth="204.0" styleClass="edit-text-field">
         <font>
            <Font size="15.0" />
         </font>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding></TextField>
      <Button fx:id="save" graphicTextGap="8.0" layoutX="638.0" layoutY="22.0" mnemonicParsing="false" onAction="#saveEdition" prefHeight="34.0" prefWidth="136.0" styleClass="save-button" text="%button.save">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" styleClass="save-edition-icon" />
         </graphic>
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      <Button fx:id="reset" graphicTextGap="8.0" layoutX="747.0" layoutY="22.0" mnemonicParsing="false" onAction="#resetEdition" prefHeight="34.0" prefWidth="99.0" style="-fx-font-weight: bold;" styleClass="save-button" text="%button.reset">
         <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="reset-icon" />
         </graphic>
         <font>
            <Font size="14.0" />
         </font></Button>
      <Label alignment="CENTER" layoutX="41.0" layoutY="18.0" prefHeight="17.0" prefWidth="204.0" style="-fx-font-weight: bold;" styleClass="general-text" text="%label.word">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label alignment="CENTER" layoutX="322.0" layoutY="18.0" prefHeight="17.0" prefWidth="204.0" styleClass="general-button" text="%label.pronounciation">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ScrollPane focusTraversable="false" hbarPolicy="NEVER" layoutX="40.0" layoutY="137.0" prefHeight="464.0" prefWidth="780.0" style="-fx-background-color: transparent;">
         <content>
            <VBox fx:id="editVbox" minHeight="462.0" prefWidth="780.0" spacing="20.0" styleClass="root-vbox" />
         </content>
      </ScrollPane>
      <Button fx:id="addTypeOfExplain" focusTraversable="false" layoutX="41.0" layoutY="91.0" mnemonicParsing="false" onAction="#onClickAddType" prefHeight="34.0" prefWidth="140.0" styleClass="save-button" text="%button.addtype">
         <font>
            <Font size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</Pane>
