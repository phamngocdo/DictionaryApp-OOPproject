<Pane prefHeight="605.0" prefWidth="742.0" styleClass="function-screen-pane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.Dictionary">
   <children>
      <Pane fx:id="explainPane" focusTraversable="true" layoutX="29.0" layoutY="80.0" prefHeight="495.0" prefWidth="519.0" styleClass="setting-pane">
