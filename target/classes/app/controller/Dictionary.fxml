            <Label alignment="CENTER" layoutY="6.0" prefHeight="17.0" prefWidth="149.0" styleClass="general-text" text="%label.antonyms">
               <font>
                  <Font size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </Label>
            <ListView fx:id="antonyms" layoutY="26.0" prefHeight="203.0" prefWidth="149.0" styleClass="syn-ant-list" />
