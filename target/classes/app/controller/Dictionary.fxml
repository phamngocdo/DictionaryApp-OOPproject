               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" styleClass="save-icon" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <padding>
            <Insets bottom="6.0" left="16.0" right="16.0" top="6.0" />
         </padding>
      </Pane>
      <Pane layoutX="29.0" layoutY="26.0" prefHeight="32.0" prefWidth="685.0">
         <children>
            <TextField fx:id="search" layoutY="2.0" prefHeight="32.0" prefWidth="685.0" promptText="%text.search">
