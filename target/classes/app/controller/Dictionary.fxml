         </opaqueInsets>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </ListView>
      <Label fx:id="notFound" layoutX="29.0" layoutY="60.0" opacity="0.6" prefHeight="32.0" prefWidth="685.0" styleClass="general-text" text="%label.notfound" visible="false">
