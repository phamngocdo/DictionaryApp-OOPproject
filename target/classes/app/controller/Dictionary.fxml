               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <padding>
                  <Insets left="16.0" right="16.0" />
               </padding>
            </Label>
            <TextArea fx:id="explainArea" editable="false" focusTraversable="false" layoutY="58.0" prefHeight="437.0" prefWidth="519.0" styleClass="explain-text-area" wrapText="true">
