<Pane prefHeight="605.0" prefWidth="742.0" styleClass="function-screen-pane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.Dictionary">
   <children>
      <Pane fx:id="explain" focusTraversable="true" layoutX="29.0" layoutY="66.0" prefHeight="515.0" prefWidth="519.0" styleClass="setting-pane">
         <padding>
            <Insets bottom="6.0" left="16.0" right="16.0" top="6.0" />
         </padding>
      </Pane>
      <Pane layoutX="29.0" layoutY="14.0" prefHeight="32.0" prefWidth="685.0">
         <children>
            <TextField fx:id="search" layoutY="2.0" prefHeight="32.0" prefWidth="685.0" promptText="%text.search">
               <padding>
                  <Insets bottom="6.0" left="16.0" right="16.0" top="6.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <font>
                  <Font size="13.0" />
               </font>
            </TextField>
            <Button fx:id="searchButton" layoutX="638.0" layoutY="5.0" mnemonicParsing="false" onAction="#searchWord" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" styleClass="search-icon" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="remove" layoutX="604.0" layoutY="6.0" mnemonicParsing="false" onAction="#removeAllCharacter" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true" styleClass="remove-icon" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
      <Pane fx:id="synonymsPane" layoutX="566.0" layoutY="66.0" prefHeight="233.0" prefWidth="149.0" styleClass="setting-pane">
         <children>
            <Label alignment="CENTER" layoutY="6.0" prefHeight="17.0" prefWidth="149.0" styleClass="general-text" text="%label.synonyms">
               <font>
                  <Font size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </Label>
            <ListView fx:id="synonyms" layoutY="26.0" prefHeight="203.0" prefWidth="149.0" styleClass="syn-ant-list" />
            <ProgressIndicator fx:id="synProgress" layoutX="64.0" layoutY="91.0" prefHeight="26.0" prefWidth="22.0" />
         </children>
      </Pane>
      <Pane fx:id="antonymsPane" layoutX="566.0" layoutY="348.0" prefHeight="233.0" prefWidth="149.0" styleClass="setting-pane">
         <children>
            <Label alignment="CENTER" layoutY="6.0" prefHeight="17.0" prefWidth="149.0" styleClass="general-text" text="%label.antonyms">
               <font>
                  <Font size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </Label>
            <ListView fx:id="antonyms" layoutY="26.0" prefHeight="203.0" prefWidth="149.0" styleClass="syn-ant-list" />
            <ProgressIndicator fx:id="antProgress" layoutX="64.0" layoutY="91.0" prefHeight="26.0" prefWidth="22.0" />
         </children>
      </Pane>
      <ListView fx:id="wordListView" fixedCellSize="32.0" layoutX="29.0" layoutY="49.0" prefHeight="0.0" prefWidth="685.0" styleClass="word-list">
         <opaqueInsets>
            <Insets top="20.0" />
         </opaqueInsets>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </ListView>
      <Label fx:id="notFound" layoutX="29.0" layoutY="46.0" opacity="0.6" prefHeight="32.0" prefWidth="685.0" styleClass="general-text" text="%label.notfound" visible="false">
         <font>
            <Font name="System Italic" size="13.0" />
         </font>
         <padding>
            <Insets bottom="6.0" left="16.0" right="16.0" top="6.0" />
         </padding>
      </Label>
   </children>
</Pane>
