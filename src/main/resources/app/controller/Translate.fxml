<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="633.0" prefWidth="860.0" styleClass="function-screen-pane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.Translate">
   <children>
      <TextArea fx:id="userText" layoutX="61.0" layoutY="86.0" prefHeight="488.0" prefWidth="334.0" promptText="%text.type" styleClass="user-text-area" wrapText="true">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></TextArea>
      <TextArea fx:id="translateText" editable="false" layoutX="471.0" layoutY="86.0" prefHeight="488.0" prefWidth="334.0" styleClass="trans-text-area" wrapText="true">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></TextArea>
      <Button fx:id="swap" layoutX="410.0" layoutY="40.0" mnemonicParsing="false" onAction="#swapLanguage" styleClass="general-button">
         <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="swap-icon" />
         </graphic>
      </Button>
      <Label fx:id="loadingTranslate" layoutX="471.0" layoutY="86.0" styleClass="general-text" text="%label.loading" visible="false">
         <font>
            <Font size="13.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
      <Label fx:id="characterLimit" alignment="CENTER" contentDisplay="CENTER" layoutX="191.0" layoutY="582.0" styleClass="general-text">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <HBox layoutX="61.0" layoutY="40.0" prefHeight="32.0" prefWidth="334.0" spacing="10.0">
         <children>
            <Button fx:id="engUserOption" mnemonicParsing="false" onAction="#chooseEngForUser" styleClass="button-choosed-language" text="%button.eng" />
            <Button fx:id="viUserOption" mnemonicParsing="false" onAction="#chooseViForUser" styleClass="button-choose-language" text="%button.vi" />
            <Button fx:id="userTextSound" mnemonicParsing="false" onAction="#playUserTextSound" prefHeight="27.0" prefWidth="33.0" styleClass="general-button">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="sound-icon" />
               </graphic>
            </Button>
            <Button fx:id="addImage" mnemonicParsing="false" onAction="#selectImage" styleClass="general-button">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="add-photo" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <HBox layoutX="471.0" layoutY="40.0" prefHeight="32.0" prefWidth="334.0" spacing="10.0">
         <children>
            <Button fx:id="engTransOption" mnemonicParsing="false" onAction="#chooseEngForTrans" styleClass="button-choose-language" text="%button.eng" />
            <Button fx:id="viTransOption" mnemonicParsing="false" onAction="#chooseViForTrans" styleClass="button-choosed-language" text="%button.vi" />
            <Button fx:id="translateTextSound" mnemonicParsing="false" onAction="#playTransTextSound" prefHeight="27.0" prefWidth="29.0" styleClass="general-button">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="sound-icon" />
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</Pane>
